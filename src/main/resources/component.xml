    <component>
        <value>radioInit</value>
        <type>initJs</type>
        <name>初始化单选</name>
        <content><![CDATA[
            $("input[name='${colName}'][value='${colValue}']").attr('checked',true);
        ]]></content>
    </component>
    <component>
        <value>checkboxInit</value>
        <type>initJs</type>
        <name>初始化多选</name>
        <content><![CDATA[
            var sel = '${colValue}'.split(',')
            for(var i=0;i<sel.length;i++){
                $("input[name='${colName}']").each(function(){
                    if ($(this).val() == sel[i]) {
                        this.checked=true;
                    }
                });
            }
        ]]></content>
    </component>
    <component>
        <value>selectInit</value>
        <type>initJs</type>
        <name>初始化下拉框</name>
        <content><![CDATA[
            $('#${colName}').val('${colValue}');
        ]]></content>
